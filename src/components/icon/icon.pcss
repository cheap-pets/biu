.mu-icon {
  display: inline-block;
  font-size: 0;
  line-height: 1;
  transition: all .2s ease-in-out;

  &::before,
  &::after,
  & > * {
    font-size: 1.15rem;
  }

  & svg {
    vertical-align: -0.15em;
    width: 1em;
    height: 1em;
  }
}

[icon="dropdown"][expanded],
[expanded] > [icon="dropdown"] {
  transform: rotate(-180deg);
}
