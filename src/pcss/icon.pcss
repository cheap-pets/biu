.mu-icon {
  display: inline-block;
  font-size: 1.15rem;

  & svg {
    vertical-align: -0.15em;
    width: 1em;
    height: 1em;
  }
}

.mu-icon {
  &[trigger-type] {
    cursor: pointer;
    transition: transform .2s ease-in-out;
  }

  &[trigger-type="close"]:hover {
    fill: $dangerColor;
    color: $dangerColor;
  }
}

.mu-editor[expanded] > [trigger-type="expander"],
.mu-dropdown[expanded] [trigger-type="expander"],
.mu-expander[expanded] [trigger-type="expander"],
.mu-icon[trigger-type="expander"][trigger-on] {
  transform: rotate(180deg);
}
